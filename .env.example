# Root environment variables for Docker Compose
# Copy this file to .env and fill in your values

# Database
DB_HOST=192.168.1.11  # Optional: defaults to 192.168.1.11 if not set
DB_PORT=2775          # Optional: defaults to 2775 if not set
DB_PASSWORD=your_secure_database_password

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/v1/auth/google/callback

# JWT
JWT_SECRET=your_random_secret_key_here_use_openssl_rand_hex_32

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
